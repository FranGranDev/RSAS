@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Frontend.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Профиль";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Профиль пользователя</h3>
                </div>
                <div class="card-body">
                    @if (Model.CurrentUser != null)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Имя пользователя:</label>
                            <p class="form-control-static">@Model.CurrentUser.UserName</p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email:</label>
                            <p class="form-control-static">@Model.CurrentUser.Email</p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Роли:</label>
                            <p class="form-control-static">
                                @foreach (var role in Model.CurrentUser.Roles)
                                {
                                    <span class="badge bg-primary me-1">@role</span>
                                }
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            Информация о пользователе недоступна
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-page="/Index" class="btn btn-secondary">На главную</a>
                </div>
            </div>
        </div>
    </div>
</div> 