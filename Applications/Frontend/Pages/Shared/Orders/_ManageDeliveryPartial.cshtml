@model Frontend.Models.Orders.DeliveryViewModel

<div class="card mb-4">
    <div class="card-header">
        <h3 class="card-title">Доставка</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="City" class="form-label"></label>
                    <input asp-for="City" class="form-control" disabled="disabled" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Street" class="form-label"></label>
                    <input asp-for="Street" class="form-control" disabled="disabled" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group mb-3">
                    <label asp-for="House" class="form-label"></label>
                    <input asp-for="House" class="form-control" disabled="disabled" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group mb-3">
                    <label asp-for="Flat" class="form-label"></label>
                    <input asp-for="Flat" class="form-control" disabled="disabled" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group mb-3">
                    <label asp-for="PostalCode" class="form-label"></label>
                    <input asp-for="PostalCode" class="form-control" disabled="disabled" />
                </div>
            </div>
        </div>
        <div class="form-group mb-3">
            <label asp-for="DeliveryDate" class="control-label"></label>
            <div class="input-group">
                <input asp-for="DeliveryDate" 
                       type="datetime-local" 
                       class="form-control" 
                       step="3600"
                       min="@DateTime.Now.ToString("yyyy-MM-ddTHH:00")"
                       value="@Model.DeliveryDate.ToString("yyyy-MM-ddTHH:00")"
                       onchange="formatDeliveryDate(this)" />
                <button class="btn btn-primary" type="button" id="updateDeliveryDateBtn">
                    <i class="bi bi-calendar-check"></i> Обновить
                </button>
            </div>
            <span asp-validation-for="DeliveryDate" class="text-danger"></span>
        </div>
    </div>
</div> 