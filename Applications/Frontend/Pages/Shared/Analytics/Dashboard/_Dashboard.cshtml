@model Frontend.Models.Analytics.DashboardViewModel

<div class="dashboard-container">
    <!-- Контейнер для KPI карточек -->
    <div id="kpi-cards-container">
        @await Html.PartialAsync("Shared/Analytics/Dashboard/_KpiCards", Model.Dashboard)
    </div>

    <!-- Контейнер для графика -->
    <div id="trend-chart-container">
        @await Html.PartialAsync("Shared/Analytics/Dashboard/_TrendChart")
    </div>

    <!-- Контейнер для графика топ товаров -->
    <div id="top-products-container">
        @await Html.PartialAsync("Shared/Analytics/Dashboard/_TopProductsChart", Model.Dashboard.TopProducts)
    </div>
</div> 