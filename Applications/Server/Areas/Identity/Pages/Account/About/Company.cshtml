@page
@model Application.Areas.Identity.Pages.Account.About.CompanyModel
@{
}

@{
    ViewData["Title"] = "Аккаунт компании";
}

<div class="mx-auto col-8">
    <h1>@ViewData["Title"]</h1>
    <div class="card shadow overflow-auto" style="height: 75vh">
        <div class="card-body border-0">
            <form asp-page-handler="General" method="post" id="General">
                <h2>Общее</h2>
                <div class="form-floating mt-2">
                    <input asp-for="Company.Email" class="form-control" aria-required="true" readonly />
                    <label asp-for="Company.Email"></label>
                    <span asp-validation-for="Company.Email" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-floating">
                    <input asp-for="Company.Name" class="form-control" aria-required="true" />
                    <label asp-for="Company.Name"></label>
                    <span asp-validation-for="Company.Name" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input asp-for="Company.Inn" class="form-control" aria-required="true" />
                    <label asp-for="Company.Inn"></label>
                    <span asp-validation-for="Company.Inn" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input asp-for="Company.Kpp" class="form-control" aria-required="true" />
                    <label asp-for="Company.Kpp"></label>
                    <span asp-validation-for="Company.Kpp" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Company.BankName" class="form-control" aria-required="true" />
                    <label asp-for="Company.BankName"></label>
                    <span asp-validation-for="Company.BankName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Company.BankBic" class="form-control" aria-required="true" />
                    <label asp-for="Company.BankBic"></label>
                    <span asp-validation-for="Company.BankBic" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Company.BankAccount" class="form-control" aria-required="true" />
                    <label asp-for="Company.BankAccount"></label>
                    <span asp-validation-for="Company.BankAccount" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input asp-for="Company.Phone" class="form-control" aria-required="true" />
                    <label asp-for="Company.Phone"></label>
                    <span asp-validation-for="Company.Phone" class="text-danger"></span>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Применить</button>
                </div>
            </form>
            <hr />
            <form asp-page-handler="Password" method="post" id="Password">
                <h2>Пароль</h2>
                <div class="form-floating mt-2">
                    <input asp-for="Password.OldPassword" class="form-control" aria-required="true" />
                    <label asp-for="Password.OldPassword"></label>
                    <span asp-validation-for="Password.OldPassword" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input asp-for="Password.Password" class="form-control" aria-required="true" />
                    <label asp-for="Password.Password"></label>
                    <span asp-validation-for="Password.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mt-2">
                    <input asp-for="Password.ConfirmPassword" class="form-control" aria-required="true" />
                    <label asp-for="Password.ConfirmPassword"></label>
                    <span asp-validation-for="Password.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Изменить пароль</button>
                </div>
            </form>
            <hr />
        </div>
    </div>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}