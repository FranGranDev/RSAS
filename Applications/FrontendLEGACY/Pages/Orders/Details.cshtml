@page "{id:int}"
@model Frontend.Pages.Orders.DetailsModel
@{
    ViewData["Title"] = "Детали заказа";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Информация о заказе</h5>
                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Model.Order.Id</dd>

                        <dt class="col-sm-4">Клиент</dt>
                        <dd class="col-sm-8">@Model.Order.ClientName</dd>

                        <dt class="col-sm-4">Дата</dt>
                        <dd class="col-sm-8">@Model.Order.Date.ToShortDateString()</dd>

                        <dt class="col-sm-4">Статус</dt>
                        <dd class="col-sm-8">@Model.Order.Status</dd>

                        <dt class="col-sm-4">Сумма</dt>
                        <dd class="col-sm-8">@Model.Order.TotalAmount.ToString("C")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <a asp-page="./Edit" asp-route-id="@Model.Order.Id" class="btn btn-primary">Редактировать</a>
            <a asp-page="./Index" class="btn btn-secondary">Назад к списку</a>
        </div>
    </div>
</div> 