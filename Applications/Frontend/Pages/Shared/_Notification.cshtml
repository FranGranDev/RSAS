@if (TempData["success"] != null || TempData["error"] != null || TempData["warning"] != null || TempData["info"] != null || !ViewData.ModelState.IsValid)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        // Настройка toastr
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        // Показываем успешное сообщение
        @if (TempData["success"] != null)
        {
            <text>
            toastr.success('@TempData["success"]');
            </text>
        }

        // Показываем сообщение об ошибке
        @if (TempData["error"] != null)
        {
            <text>
            toastr.error('@TempData["error"]');
            </text>
        }

        // Показываем предупреждение
        @if (TempData["warning"] != null)
        {
            <text>
            toastr.warning('@TempData["warning"]');
            </text>
        }

        // Показываем информационное сообщение
        @if (TempData["info"] != null)
        {
            <text>
            toastr.info('@TempData["info"]');
            </text>
        }

        // Показываем ошибки валидации
        @if (!ViewData.ModelState.IsValid)
        {
            foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <text>
                toastr.error('@error.ErrorMessage');
                </text>
            }
        }

        // Очищаем ошибки при изменении полей
        $('input').on('input', function() {
            var fieldName = $(this).attr('name');
            if (fieldName) {
                $('span[data-valmsg-for="' + fieldName + '"]').text('');
            }
        });
    </script>
}