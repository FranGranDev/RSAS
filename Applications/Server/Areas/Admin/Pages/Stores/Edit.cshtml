@page
@model Application.Areas.Admin.Pages.Stores.EditModel

@{
    ViewData["Title"] = $"Редактирование склада";
}

<form method="post">
    <input hidden asp-for="@Model.Stock.Id" />
    <div class="container col-8 shadow">
        <div class="mx-4 mt-4">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-check mt-2">
            <label asp-for="@Model.Stock.Name"></label>
            <input asp-for="@Model.Stock.Name" type="text" class="form-control" />
        </div>
        <div class="form-check mt-2">
            <label asp-for="@Model.Stock.Location"></label>
            <input asp-for="@Model.Stock.Location" type="text" class="form-control" />
        </div>
        <div class="form-check mt-2">
            <div class="form-group">
                <label asp.for="@Model.Stock.SaleType">Выберите тип:</label>
                <select asp-for="@Model.Stock.SaleType" class="form-control" asp-items="@Model.Stock.GetEnumList()"></select>
            </div>
        </div>
        <hr/>
        <div class="m-4">
            <div class="row">
                <div class="col-md-8">
                    <button type="submit" asp-page-handler="Update" class="btn col-12 btn-primary">Обновить информацию</button>
                </div>
                <div class="col-md-4">
                    <button type="submit" asp-page-handler="Delete" class="btn col-8 btn-danger">Удалить</button>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-md-8">
                    <a asp-page="StockInfo" asp-route-id="@Model.Stock.Id" class="btn col-12 btn-secondary">Назад</a>
                </div>
            </div>
        </div>
        <hr />
    </div>

</form>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}