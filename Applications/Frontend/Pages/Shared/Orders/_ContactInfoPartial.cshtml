@model Frontend.Models.Orders.ContactInfoViewModel

<div class="card mb-4">
    <div class="card-header">
        <h3 class="card-title">Контактная информация</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" disabled="@(!Model.Editable)" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" disabled="@(!Model.Editable)" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" disabled="@(!Model.Editable)" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
</div> 