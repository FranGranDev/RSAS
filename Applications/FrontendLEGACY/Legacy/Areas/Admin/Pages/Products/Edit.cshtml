@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Application.Areas.Admin.Pages.Products.EditModel
@{
}

@{
    ViewData["Title"] = "Редактировать товар";
}

<form method="post">
    <input type="hidden" asp-for="@Model.Product.Id"/>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 mt-4">
                <div class="card border-0 shadow">
                    <div class="card-body">
                        <h2>@ViewData["Title"]</h2>

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-check mt-2">
                            <label asp-for="@Model.Product.Name"></label>
                            <input asp-for="@Model.Product.Name" type="text" class="form-control"/>
                        </div>
                        <div class="form-check mt-2">
                            <label asp-for="@Model.Product.Description"></label>
                            <input asp-for="@Model.Product.Description" type="text" class="form-control"/>
                        </div>
                        <div class="form-check mt-2">
                            <label asp-for="@Model.Product.RetailPrice"></label>
                            <input asp-for="@Model.Product.RetailPrice" type="number" step="0.01" class="form-control"/>
                        </div>
                        <div class="form-check mt-2">
                            <label asp-for="@Model.Product.WholesalePrice"></label>
                            <input asp-for="@Model.Product.WholesalePrice" type="number" step="0.01" class="form-control"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mt-4">
                <div class="row px-2">
                    <div class="card border-0 shadow">
                        <div class="card-body text-center">
                            <div>
                                <button asp-page-handler="Apply" type="submit" class="btn btn-primary col-12">Применить</button>
                            </div>
                            <hr/>
                            <div class="mt-4">
                                <button asp-page-handler="Back" type="submit" class="btn btn-secondary col-12">Назад</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</form>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}