@page
@model Application.Areas.Admin.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Сотрудники";
}

<div class="card border-0 col-12 mx-auto">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-md-6 text-end">
                <a asp-page="Create" class="btn btn-primary btn-lg col-6">Создать сотрудника</a>
            </div>
        </div>
        <div class="overflow-auto" style="height: 75vh">
            <table class="table table-bordered shadow">
                <thead class="thead-dark text-center align-middle">
                    <tr>
                        <th>Имя</th>
                        <th>Фамилия</th>
                        <th>Эл.почта</th>
                        <th>Телефон</th>
                        <th>Должность</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="text-center align-middle">
                    @foreach (var item in Model.Employees)
                    {
                        if (Model.SelfId == item.Id)
                        {
                            <tr style="background-color: #90EE90">
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.Role</td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.Role</td>
                                <td>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id">
                                        <button type="submit" class="btn btn-danger">Удалить</button>
                                    </form>
                                </td>
                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>
    </div>

</div>