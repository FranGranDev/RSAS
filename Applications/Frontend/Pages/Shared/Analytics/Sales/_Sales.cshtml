@model Frontend.Models.Analytics.SalesViewModel

<div class="sales-container">
    <!-- Контейнер для графиков -->
    <div class="row mb-4">
        <!-- График продаж по категориям -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">Продажи по категориям</h5>
                </div>
                <div class="card-body">
                    <canvas id="categorySalesChart" style="position: relative; height: 400px;"></canvas>
                </div>
            </div>
        </div>

        <!-- График прогноза -->
        <div class="col-md-8 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">ABC-анализ</h5>
                </div>
                <div class="card-body">
                    <canvas id="abcAnalysisChart" style="position: relative; height: 400px;"></canvas>
                </div>
            </div>
        </div>

        <!-- График ABC-анализа -->
        <div class="col-md-12 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Прогноз продаж</h5>
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary" id="toggleForecastInfo">
                            <i class="bi bi-info-circle"></i> Информация
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div id="forecastInfo" class="alert alert-info mb-3" style="display: none;">
                        <h6 class="alert-heading">Информация о прогнозе:</h6>
                        <ul class="mb-0">
                            <li>Прогноз основан на исторических данных за последние 6 месяцев</li>
                            <li>Учитываются тренды и сезонность продаж</li>
                            <li>Доверительный интервал показывает возможный диапазон значений</li>
                            <li>Рекомендуемый заказ учитывает текущий остаток и страховой запас</li>
                        </ul>
                    </div>
                    <canvas id="forecastChart" style="position: relative; height: 400px;"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Обработчик для кнопки информации о прогнозе
            $('#toggleForecastInfo').click(function() {
                $('#forecastInfo').slideToggle();
            });
        });
    </script>
}