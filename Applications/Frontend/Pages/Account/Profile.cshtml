@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Frontend.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Профиль";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Профиль пользователя</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-page-handler="UpdateProfile">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" value="@Model.CurrentUser?.Email" disabled>
                                    <label>Email</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" value="@string.Join(", ", Model.CurrentUser?.Roles ?? new List<string>())" disabled>
                                    <label>Роли</label>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="ClientData.FirstName" class="form-control" />
                                    <label asp-for="ClientData.FirstName">Имя</label>
                                    <span asp-validation-for="ClientData.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="ClientData.LastName" class="form-control" />
                                    <label asp-for="ClientData.LastName">Фамилия</label>
                                    <span asp-validation-for="ClientData.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="ClientData.Phone" class="form-control" />
                                <label asp-for="ClientData.Phone">Номер телефона</label>
                                <span asp-validation-for="ClientData.Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-footer d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Применить изменения</button>
                            <a asp-page="/Index" class="btn btn-secondary">На главную</a>
                        </div>
                    </form>

                    <hr class="my-4" />

                    <form method="post" asp-page-handler="ChangePassword">
                        <h5 class="mb-3">Смена пароля</h5>
                        
                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="ChangePasswordData.CurrentPassword" type="password" class="form-control" />
                                <label asp-for="ChangePasswordData.CurrentPassword">Текущий пароль</label>
                                <span asp-validation-for="ChangePasswordData.CurrentPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="ChangePasswordData.NewPassword" type="password" class="form-control" />
                                <label asp-for="ChangePasswordData.NewPassword">Новый пароль</label>
                                <span asp-validation-for="ChangePasswordData.NewPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="ChangePasswordData.ConfirmNewPassword" type="password" class="form-control" />
                                <label asp-for="ChangePasswordData.ConfirmNewPassword">Подтверждение нового пароля</label>
                                <span asp-validation-for="ChangePasswordData.ConfirmNewPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Изменить пароль</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 