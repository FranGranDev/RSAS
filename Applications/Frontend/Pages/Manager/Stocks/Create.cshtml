@page
@model Frontend.Pages.Manager.Stocks.CreateModel
@{
    ViewData["Title"] = "Создание склада";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Stock.Name" class="form-label">Название склада</label>
                            <input asp-for="Stock.Name" class="form-control" />
                            <span asp-validation-for="Stock.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Stock.Address" class="form-label">Адрес</label>
                            <input asp-for="Stock.Address" class="form-control" />
                            <span asp-validation-for="Stock.Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Stock.City" class="form-label">Город</label>
                            <input asp-for="Stock.City" class="form-control" />
                            <span asp-validation-for="Stock.City" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Stock.Phone" class="form-label">Телефон</label>
                            <input asp-for="Stock.Phone" class="form-control" />
                            <span asp-validation-for="Stock.Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Stock.Email" class="form-label">Email</label>
                            <input asp-for="Stock.Email" class="form-control" />
                            <span asp-validation-for="Stock.Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Создать</button>
                            <a asp-page="Index" class="btn btn-secondary">Отмена</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 