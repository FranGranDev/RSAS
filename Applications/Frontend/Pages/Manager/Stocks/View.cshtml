@page "{id:int}"
@model Frontend.Pages.Manager.Stocks.ViewModel
@{
    ViewData["Title"] = Model.StockViewModel.Stock.Name;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">@Model.StockViewModel.Stock.Name</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Адрес:</strong> @Model.StockViewModel.Stock.Address</p>
                            <p class="mb-1"><strong>Город:</strong> @Model.StockViewModel.Stock.City</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Телефон:</strong> @Model.StockViewModel.Stock.Phone</p>
                            <p class="mb-1"><strong>Email:</strong> @Model.StockViewModel.Stock.Email</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-4">
                            <div class="input-group">
                                <input type="text" class="form-control" id="searchInput" placeholder="Поиск товаров...">
                                <button class="btn btn-outline-secondary" type="button" id="searchButton">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="sortBy">
                                <option value="name">По названию</option>
                                <option value="category">По категории</option>
                                <option value="quantity">По количеству</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-outline-secondary" type="button" id="sortDirection" title="Сортировка по возрастанию/убыванию">
                                <i class="bi bi-sort-down"></i>
                            </button>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" id="categoryFilter">
                                <option value="">Все категории</option>
                                @foreach (var category in Model.StockViewModel.Products.Select(p => p.Product.Category).Distinct())
                                {
                                    <option value="@category">@category</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="row" id="productsGrid">
                @foreach (var product in Model.StockViewModel.Products)
                {
                    <div class="col-md-3 mb-4 product-card" 
                         data-product-id="@product.Product.Id"
                         data-name="@product.Product.Name"
                         data-category="@product.Product.Category"
                         data-quantity="@(product.StockProduct?.Quantity ?? 0)">
                        <partial name="Shared/Stocks/_StockProductPartial" model="product" />
                    </div>
                }
            </div>
            <nav aria-label="Навигация по страницам" class="mt-4">
                <ul class="pagination justify-content-center" id="pagination">
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/stock-product-filter.js"></script>
} 