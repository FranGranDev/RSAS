@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Frontend.Pages.Client.Order.CreateModel
@{
    ViewData["Title"] = "Оформление заказа";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h1 class="card-title h3 mb-0">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <form method="post" id="orderForm">
                        <div class="mb-4">
                            <h3 class="h4 mb-3">Товары в заказе</h3>
                            <partial name="Shared/Orders/_OrderItemsPartial" model="Model.Cart" />
                        </div>

                        <partial name="Shared/Orders/_ContactInfoPartial" model="Model.Contact" />
                        <partial name="Shared/Orders/_DeliveryPartial" model="Model.Delivery" />
                        <partial name="Shared/Orders/_PaymentPartial" model="Model.Payment" />

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="/Client/Catalog/Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Вернуться в каталог
                            </a>
                            <button type="submit" class="btn btn-primary" onclick="return confirm('Вы уверены, что хотите оформить заказ?')">
                                Оформить заказ <i class="bi bi-bag-check"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 