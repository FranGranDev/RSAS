@page
@model Frontend.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Заказы";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    
    <div class="row mb-3">
        <div class="col">
            <a asp-page="Create" class="btn btn-primary">Создать заказ</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Клиент</th>
                    <th>Дата</th>
                    <th>Статус</th>
                    <th>Сумма</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.ClientName</td>
                        <td>@order.Date.ToShortDateString()</td>
                        <td>@order.Status</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@order.Id" class="btn btn-sm btn-primary">Редактировать</a>
                            <a asp-page="./Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">Детали</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 